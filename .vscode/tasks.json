{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "zig",
            "type": "shell",
            "args": [
                "build",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
            },
            "problemMatcher": "$gcc",
        },
        {
            "label": "Test",
            "command": "zig",
            "type": "shell",
            "args": [
                "build",
                "test",
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$gcc",
        },
        {
            "label": "Run",
            "command": "zig",
            "type": "shell",
            "args": [
                "build",
                "run",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
            },
            "problemMatcher": "$gcc"
        },
    ]
}
